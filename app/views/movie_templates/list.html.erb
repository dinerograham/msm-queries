<h1>List of all movies</h1>

<table border=1>
<tr>
<th>ID</th>
<th>Image</th>
<th>Title</th>
<th>Year</th>
<th>Director</th>
</tr>



<% Movie.all.each do |a_movie|%>
  <tr>
  <td><%= a_movie.id%></td>
  <td><img src="<%= a_movie.image %>" width=50></td>
  <td><%= a_movie.title %></td>
  <td><%= a_movie.year %></td>
  <td>
  <% director_om = Director.where({:id => a_movie.director_id}) %>
  <%= director_om[0].name%>
  </td>
  <td>
  <a href="/movies/<%= a_movie.id%>"> Show details</a>
  </tr>
<%end%>
</table>
